  {% set start_page = (page - 2) if (page - 2) > 0 else 1 %}
  {% set end_page = (page + 2) if (page + 2) <= total_pages else total_pages %}
  {% if end_page - start_page < 4 %}
    {% if start_page > 1 %}
      {% set start_page = (end_page - 4) if (end_page - 4) > 0 else 1 %}
    {% endif %}
